================================================================================
Simple statements
================================================================================

function foo(xs: vector of int): int
	{
	for ( _ in xs )
		{ }

	for ( [_] in xs )
		{ }

	while ( T )
		{ }

	switch ( 1 )
		{
		case 1:
			fallthrough;
		default:
			break;
		}

	return 0;
	}

